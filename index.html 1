<script>
const materias=[
 {n:'Lengua Inglesa I',e:'pendiente'},
 {n:'FonÃ©tica I',e:'pendiente'},
 {n:'DidÃ¡ctica',e:'pendiente'}
];

const cont=document.getElementById('materias');

function render(){
 cont.innerHTML='';
 materias.forEach((m,i)=>{
  const d=document.createElement('div');
  d.className='materia '+m.e;
  d.textContent=m.n+' Â· '+m.e;
  d.onclick=()=>toggle(i);
  cont.appendChild(d);
 });
}
function toggle(i){
 materias[i].e = materias[i].e==='pendiente'?'regular': materias[i].e==='regular'?'aprobada':'pendiente';
 localStorage.setItem('materias',JSON.stringify(materias));
 render();
}
function show(id){
 document.querySelectorAll('section').forEach(s=>s.classList.remove('active'));
 document.getElementById(id).classList.add('active');
}
const saved=localStorage.getItem('materias');
if(saved){materias.splice(0,materias.length,...JSON.parse(saved));}
render();
</script>
